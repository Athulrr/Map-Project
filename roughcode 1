  <!-- JavaScript for Sidebar Functionality and Modal -->
  <script>
    function toggleSidebar() {
      var sidebar = document.getElementById('sidebar');
      var mainContent = document.getElementById('main-content');
      if (sidebar.style.width === '250px') {
        sidebar.style.width = '0';
        mainContent.style.marginLeft = '0';
      } else {
        sidebar.style.width = '250px';
        mainContent.style.marginLeft = '250px';
      }
    }

    var mainMap = L.map('map').setView([10.8505, 76.2711], 8);
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(mainMap);

    function loadPlaces() {
      const places = JSON.parse(localStorage.getItem('places')) || [];
      places.forEach(place => {
        L.marker([place.lat, place.lng]).addTo(mainMap)
          .bindPopup(`<strong>${place.name}</strong><br>${place.description}<br><img src="${place.photo}" width="100">`);
      });
    }
    window.onload = loadPlaces;

    // Open the modal
    document.getElementById('add-btn').onclick = function() {
      document.getElementById('addPlaceModal').style.display = 'flex';
      initModalMap();
    }

    // Close the modal
    function closeModal() {
      document.getElementById('addPlaceModal').style.display = 'none';
    }

    // Form submission
    document.getElementById('addPlaceForm').onsubmit = function(e) {
      e.preventDefault();

      const name = document.getElementById('name').value;
      const description = document.getElementById('description').value;
      const latitude = parseFloat(document.getElementById('latitude').value);
      const longitude = parseFloat(document.getElementById('longitude').value);
      const photoFile = document.getElementById('photo').files[0];

      // Convert photo to base64
      const reader = new FileReader();
      reader.onloadend = function () {
        const photoDataUrl = reader.result;

        const places = JSON.parse(localStorage.getItem('places')) || [];
        places.push({ name, description, lat: latitude, lng: longitude, photo: photoDataUrl });
        localStorage.setItem('places', JSON.stringify(places));

        L.marker([latitude, longitude]).addTo(mainMap)
          .bindPopup(`<strong>${name}</strong><br>${description}<br><img src="${photoDataUrl}" width="100">`);

        closeModal();
      };
      if (photoFile) {
        reader.readAsDataURL(photoFile);
      }
    }

    // Initialize modal map
    function initModalMap() {
      var modalMap = L.map('modal-map').setView([10.8505, 76.2711], 8);
      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; OpenStreetMap contributors'
      }).addTo(modalMap);

      var marker = L.marker([10.8505, 76.2711], { draggable: true }).addTo(modalMap);
      marker.on('dragend', function(event) {
        var latlng = event.target.getLatLng();
        document.getElementById('latitude').value = latlng.lat;
        document.getElementById('longitude').value = latlng.lng;
      });

      modalMap.on('click', function(e) {
        marker.setLatLng(e.latlng);
        document.getElementById('latitude').value = e.latlng.lat;
        document.getElementById('longitude').value = e.latlng.lng;
      });
    }
  </script>
</body>
